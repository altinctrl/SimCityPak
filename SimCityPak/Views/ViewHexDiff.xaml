<Window x:Class="SimCityPak.Views.ViewHexDiff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewHexDiff" Height="323" Width="370">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox FontFamily="Courier New" Margin="12,12,0,22" Name="textBoxHex1" Grid.Column="0" MouseUp="textBoxHex1_MouseUp" />
                <TextBox FontFamily="Courier New" Margin="0,12,12,22" Name="textBoxHex2" Grid.Column="1" MouseUp="textBoxHex2_MouseUp" />
            </Grid>
        </ScrollViewer>
        <TextBlock Height="16" HorizontalAlignment="Left" Margin="12,0,0,0" Name="txtMessage" Text="TextBlock" VerticalAlignment="Bottom" />
    </Grid>
</Window>
