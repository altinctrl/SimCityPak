            <TextBlock HorizontalAlignment="Left" Margin="106,6,0,0" Name="txtHeight" Text="h" VerticalAlignment="Top" Width="94" />
            <TextBlock HorizontalAlignment="Left" Margin="106,28,0,0" Name="txtWidth" Text="h" VerticalAlignment="Top" Width="94" />
            <TextBlock HorizontalAlignment="Left" Margin="206,6,0,0" Name="lblSize" Text="Size:" VerticalAlignment="Top" Width="94" />
            <TextBlock HorizontalAlignment="Left" Margin="306,6,0,0" Name="txtSize" Text="h" VerticalAlignment="Top" Width="94" />
            <TextBlock HorizontalAlignment="Left" Margin="206,28,0,0" Name="lblPixelFormat" Text="Pixel Format:" VerticalAlignment="Top" Width="94" />
            <TextBlock HorizontalAlignment="Left" Margin="306,28,0,0" Name="txtPixelFormat" Text="h" VerticalAlignment="Top" Width="94" />
            <Button Content="Import" Height="23" HorizontalAlignment="Right" Margin="0,0,6,6" Name="btnImport" VerticalAlignment="Bottom" Width="75" Click="btnImport_Click" />
        </Grid>
    </Grid>
</UserControl>
